{
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./src/types"
    ]
  }
}